{
  "name":"linchpin/box-of-scraps",
  "description":"Base project for the box of scraps, handle the build and deployment",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://packagist.linchpin.com"
    }
  ],
  "version": "1.0.4",
  "require": {
    "php" : ">=7.3",
    "linchpin/gravityforms": "2.4.22",
    "linchpin/wp-rocket": "3.8.3",
    "linchpin/mantle": "1.0.0",
    "wpackagist-plugin/akismet": "4.1.8",
    "wpackagist-plugin/courier-notices": "1.3.1",
    "wpackagist-plugin/duplicate-post": "4.0.2",
    "wpackagist-plugin/imagify": "1.9.14",
    "wpackagist-plugin/jetpack": "9.4",
    "wpackagist-plugin/query-monitor": "3.6.7",
    "wpackagist-plugin/redirection": "5.0.1",
    "wpackagist-plugin/rewrite-rules-inspector": "1.2.1",
    "wpackagist-plugin/shortcode-in-menus": "3.5.1",
    "wpackagist-plugin/stream": "3.6.0",
    "wpackagist-plugin/wp-mail-smtp" : "2.6.0",
    "wpackagist-plugin/wordpress-seo": "15.7",
    "wpackagist-theme/twentytwentyone": "1.4"
  },
  "extra": {
    "installer-paths": {
      "plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "0.7.1",
    "wp-coding-standards/wpcs": "2.3.0",
    "squizlabs/php_codesniffer": "3.5.8",
    "phpcompatibility/php-compatibility": "9.3.5",
    "php-parallel-lint/php-parallel-lint": "1.2.0",
    "php-parallel-lint/php-console-highlighter": "0.5"
  },
  "scripts" : {
		"lint": [
			"@php ./vendor/php-parallel-lint/php-parallel-lint/parallel-lint . -e php --exclude vendor --exclude .git"
		],
		"checkcs": [
			"@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=./phpcs.xml ./"
		],
		"fixcs": [
			"@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --standard=./phpcs.xml ./"
		],
		"test": [
			"@php ./vendor/phpunit/phpunit/phpunit --no-coverage"
		],
		"coverage": [
			"@php ./vendor/phpunit/phpunit/phpunit"
		]
	}
}
